<section class='index'>
<%= form_tag people_path, method: :get do %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Search", name: nil %>
  <a href="/people/">clear</a>
<% end %>
  <article>
  <table>
    <tr>
      <th>Name</th>
      <th>Born</th>
      <th>Died</th>
      <th>Age</th>
    </tr>

    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.fullName, person %></td>
        <td><%= person.dateBorn %></td>
        <td><%= person.dateDied%></td>
        <td><%= person.ageDied %></td>
      </tr>
    <% end %>
  </table>
  </article>
  <%= will_paginate @posts %>
</section>
