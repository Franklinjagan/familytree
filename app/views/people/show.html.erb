<p id="notice"><%= notice %></p>
<section class='twelve columns breadcrumb'>
  <%= link_to 'Back', people_path %>
</section>

<section class='six columns main-bio'>
  <article class='detail-card'>
  <h1><%= @person.name %> <%= link_to '(Edit)', edit_person_path(@person), :class => 'edit-person' %></h1>
    <p><%= @person.birth %></p>
    <p><% @person.spouses.each do |spouse| %>
      Married to <%= link_to spouse.name, spouse %>
      <% end %>
    </p>
    <p><%= @person.death %></p>
  </article>

  <article class='detail-card'>
    <h3>Photos</h3>
    <p class='add-photo'><a href='#'>+ Add a Photo</a></p>
  </article>

  <article class='detail-card'>
    <h3>Notes</h3>
    <ul>
      <% @person.notes.each do |note| %>
        <li><%= truncate(note.content, :length => 300) %> <%= link_to "(read more)", note, :class => 'sub-link' %></li>
      <% end %>
    </ul>
    <p class='add-note'><a href="<%= new_note_path %>">+ Add a Note</a></p>
  </article>

</section>


<section class='six columns'>
  <article class='detail-card'>
  <h3>Parents</h3>
  <p>
    <% @person.parents.each do |parent| %>
      <%= link_to(parent) do %>
        <span><%= parent.name %></span>
      <% end %>
    <% end %>
  </p>
  <p class='add-relation'><a href="<%= new_person_path %>">+ Add a Parent</a></p>
  </article>
  <article class='detail-card'>
  <h3>Siblings</h3>
  <p>
    <% @person.siblings.each do |sibling| %>
      <%= link_to(sibling) do %>
        <span><%= sibling.name %></span>
      <% end %>
    <% end %></p>
    <p class='add-relation'><a href="<%= new_person_path %>">+ Add a Sibling</a></p>
  </article>
  <article class='detail-card'>
  <h3>Children</h3>
  <p>
    <% @person.children.each do |child| %>
      <%= link_to(child) do %>
        <span><%= child.name %></span>
      <% end %>
    <% end %></p>
    <p class='add-relation'><a href="<%= new_person_path %>">+ Add a Child</a></p>
  </article>
</section>

